#include <stdio.h>

int main() {
  int i,j;
  
  for(i=1; i<=5; i++)  {
      for (j=1; j<=(6-i) ; j++)  {
          printf("*");
      }
      printf("\n");
  }

    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j;
  
  for(i=1; i<=5; i++)  {
      for (j=5; j>=i ; j--)  {
          printf("*");
      }
      printf("\n");
  }

    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j,n;
  scanf("%d",&n);
  
  for(i=1; i<=n; i++)  {
      for (j=1; j<=n+1-i ; j++)  {
          printf("*");
      }
      printf("\n");
  }

    return 0;
}
