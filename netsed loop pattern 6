#include <stdio.h>

int main() {
  int i,j;
    for(i=1; i<=5; i++)  {
      for (j=1; j<=5-i ; j++) {
         //space
          printf(" ");
         
      }
       printf("*"); 
       for(int k= 1; k<=2*i-3; k++){
           printf(" ");
       }
       if(i !=1){
           printf("*");
       }
       
     printf("\n"); 
     
  }
return 0;
