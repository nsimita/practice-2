#include <stdio.h>

int main() {
  int i,j;
    for(i=1; i<=5; i++)  {
      for (j=1; j<=5-i ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=i; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }

    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j;
    for(i=1; i<=5; i++)  {
      for (j=1; j<=i-1 ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=6-i; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }

    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j,n;
  scanf("%d",&n);
    for(i=1; i<=n; i++)  {
      for (j=1; j<=i-1 ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=n+1-i; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }

    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j;
  
    for(i=1; i<=5; i++)  {
      for (j=1; j<=5-i ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=2*i-1; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }

    return 0;
}
