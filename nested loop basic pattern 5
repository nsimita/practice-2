#include <stdio.h>

int main() {
  int i,j;
   //upper half
    for(i=1; i<=5; i++)  {
      for (j=1; j<=5-i ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=2*i-1; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }
  //lower half
 for(i=1; i<=4; i++) {
     for(j=1; j<=i; j++){
         printf(" ");
     }
     for(int k=1; k<=9-2*i; k++){
         printf("*");
     }
     printf("\n");
 } 
    return 0;
}
//
#include <stdio.h>

int main() {
  int i,j,n;
  scanf("%d",&n);
   //upper half
    for(i=1; i<=n; i++)  {
      for (j=1; j<=n-i ; j++) {
         //space
          printf(" ");
      }
      for(int k=1; k<=2*i-1; k++){
          //star
          printf ("*");
      }
      //new line
      printf("\n");
  }
  //lower half
 for(i=1; i<=n-1; i++) {
     for(j=1; j<=i; j++){
         printf(" ");
     }
     for(int k=1; k<=2*n-1-2*i; k++){
         printf("*");
     }
     printf("\n");
 } 
    return 0;
}
